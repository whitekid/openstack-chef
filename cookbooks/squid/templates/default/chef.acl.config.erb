<% @host_acl.each do |host| %>
acl <%= host[0] %> <%= host[1] %> <%= host[2] %>
<% end %>
<% @url_acl.each do |url| %>
acl <%= url[0] %> url_regex <%= url[1] %>
<% end %>
<% @acls.each do |acl| %>
http_access <%= acl[0] %> <%= acl[1] %> <%= acl[2] %>
<% end %>

acl localnet src 10.0.0.0/8     # RFC1918 possible internal network
http_access allow localnet


