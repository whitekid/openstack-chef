[DEFAULT]
dhcpbridge_flagfile=/etc/nova/nova.conf
dhcpbridge=/usr/bin/nova-dhcpbridge
logdir=/var/log/nova
state_path=/var/lib/nova
lock_path=/var/lock/nova
force_dhcp_release=True
iscsi_helper=tgtadm
libvirt_use_virtio_for_bridges=True
connection_type=libvirt
root_helper=sudo nova-rootwrap /etc/nova/rootwrap.conf
verbose=True
ec2_private_dns_show_ip=True
api_paste_config=/etc/nova/api-paste.ini
volumes_path=/var/lib/nova/volumes

# enable KVM
compute_driver=<%= @compute_driver %>
libvirt_type=<%= @libvirt_type %>

# for each compute node
my_ip=<%= @my_ip %>
vncserver_listen=<%= @vncserver_listen %>
vncserver_proxyclient_address=<%= @vncserver_proxyclient_address %>
sql_connection=<%= @connection %>

auth_strategy=keystone
compute_scheduler_driver=nova.scheduler.filter_scheduler.FilterScheduler
rabbit_host=<%= @rabbit_host %>
rabbit_password=<%= @rabbit_passwd %>
glance_api_servers=<%= @control_host %>:9292
s3_host=<%= @control_host %>
cc_host=<%= @control_host %>
ec2_url=http://<%= @control_host %>:8773/services/Cloud

# quantum
network_api_class=<%= @network_api_class %>
quantum_url=http://<%= @control_host %>:9696
quantum_auth_strategy=keystone
quantum_admin_tenant_name=<%= @quantum_tenant_name %>
quantum_admin_username=<%= @quantum_user_name %>
quantum_admin_password=<%= @quantum_user_passwd %>
quantum_admin_auth_url=http://<%= @keystone_host %>:35357/v2.0
libvirt_vif_driver=<%= @libvirt_vif_driver %>

# cinder
volume_api_class=nova.volume.cinder.API

[keystone_authtoken]
auth_host = <%= @control_host %>
auth_port = 35357
auth_protocol = http
auth_uri = http://<%= @control_host %>:5000/
admin_tenant_name = <%= @service_tenant_name %>
admin_user = <%= @service_user_name %>
admin_password = <%= @service_user_passwd %>
